<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fashion_order_server.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.fashion_order_server.model.User">
        INSERT INTO user (id, password, email)
        VALUES (#{id}, #{password}, #{email})
    </insert>
    <select id="selectUserById" resultType="com.fashion_order_server.model.User" parameterType="java.lang.Integer">
        SELECT id, password, email
        FROM user
        WHERE no = #{userNo}
    </select>
</mapper>